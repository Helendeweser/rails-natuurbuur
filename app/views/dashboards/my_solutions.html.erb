<div id="banner-solution-page" style="background-image: linear-gradient(rgba(0,0,283,0.2),rgba(0,0,283,0.2)), url(<%= asset_path 'leaves_darker2.png' %>);"></div>

<div class="cards-index my-solutions-grid">

  <% @solutions.each do |solution| %>
    <%# SMALL CARD: EVERYTHING CENTERED %>
    <div class="small-card">
      <%= link_to favourite_path(solution), data: {turbo_method: :delete, turbo_confirm: "Remove this solutions from yor favorites ?"} do %>
        <i class="fa-solid fa-bookmark"></i>
      <% end %>
      <%= link_to solution_path(solution) do %>
        <div class="content-small-card">
          <div><%= cl_image_tag solution.photos[1].key, class: "rounded-pictures"%></div>

          <h3><%= solution.title %></h3>

          <p><%= solution.intro %></p>

          <%# 'FOOTER' CARD WITH LEFT:ICONS and RIGHT:PRICE %>
          <div class="details-small-card">

            <%# ICONS %>
            <div class="icons-details-small-card">

              <%= render "solutions/icons_details_card", solution:solution %>

            </div>

            <%# PRICE %>
            <div class="price-details-small-card">
              <% if solution.price == 0 %>
                <h3>Free</h3>
              <% else %>
              <h3>â‚¬ <%= solution.price %></h3>
              <% end %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
