<div class="title-page" style="display:hidden">
  <% title=""%>
</div>

<%# BANNER %>
<%= render "shared/banner" %>

<div class="cards-map">
  <%# CARDS INDEX %>
  <div class="cards-index index-grid">
    <% @solutions.each do |solution| %>
      <%# SMALL CARD: EVERYTHING CENTERED %>
      <%= render "card", solution:solution %>
    <% end %>

    <% if @solutions.empty? %>
        <%= image_tag "blank.png", width: 1 %>
      <div class="img-no-results">
        <%= image_tag "no-results.png", width: 450 %>
      </div>
    <% end %>
</div>

  <%# MAP %>
  <div class="image-map">
    <%= render "clickable_map" %>
      
  </div>
</div>
